<p id="notice"><%= notice %></p>

DATA: <%= data_br(Date.today) %>

<h1><%= Cdz.model_name.human(count: @cdzs.count) %></h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th> <%= @cdzs.human_attribute_name(:nome)%> </th>
      <th><%= @cdzs.human_attribute_name(:Costelação)%> </th>
      <th><%= @cdzs.human_attribute_name(:Idade)%> </th>
      <th> <%= @cdzs.human_attribute_name(:Foto)%> </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cdzs.each do |cdz| %>
      <tr>
        <td><%= cdz.nome %></td>
        <td><%= cdz.costelação %></td>
        <td><%= cdz.idade %></td>
        <td><%= image_tag cdz.foto, size:"150x150" %></td>
        <td><%= link_to t('links.show'), cdz,  class:"btn btn-primary" %></td>
        <td><%= link_to t('links.edit'), edit_cdz_path(cdz), class:"btn btn-primary" %></td>
        <td><%= link_to t('links.delete'), cdz, method: :delete, data: { confirm: t('messages.confirm'), }, class:"btn btn-primary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('new.cdz'), new_cdz_path, class:"btn btn-primary" %>
